<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ChessFederationManager.UI.Views"
        xmlns:viewModels="clr-namespace:ChessFederationManager.UI.ViewModels"
        x:Class="ChessFederationManager.UI.MainWindow"
        x:DataType="viewModels:MainViewModel"
        Width="1100" Height="700"
        Title="Chess Federation Manager">
  <TabControl>
    <TabItem Header="Players">
      <views:PlayersView DataContext="{Binding Players}"/>
    </TabItem>
    <TabItem Header="Competitions">
      <views:CompetitionsView DataContext="{Binding Competitions}"/>
    </TabItem>
    <TabItem Header="Games">
      <views:GamesView DataContext="{Binding Games}"/>
    </TabItem>
    <TabItem Header="Leaderboard">
      <views:LeaderboardView DataContext="{Binding Leaderboard}"/>
    </TabItem>
  </TabControl>
</Window>

